<!doctype html>
<!--
  <3 Emojis powered by https://github.com/twitter/twemoji <3
-->
<html>
  <%= partial "partials/head" %>
  <body class="<%= page_classes %>">
    <%= partial "partials/navigation" %>
    <%= yield %>
    <%= partial "partials/footer" %>
  </body>
  <script type="text/javascript">
    navigator.serviceWorker.getRegistrations().then(function(registrations) {
      for(let registration of registrations) {
        registration.unregister()
      }
    })
  </script>
  <%= javascript_include_tag 'site', relative: true %>
  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js' %>
  <%= javascript_include_tag 'vendor/lity.min.js', relative: true %>
  <%= partial "partials/scripts" %>

</html>
